<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_top"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20px"
                    android:text="个人资料"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center_vertical"
                    android:text="姓名："
                    android:textSize="27px" />

                <EditText
                    android:id="@+id/fenxiao_name"
                    android:layout_width="310px"
                    android:layout_height="70px"
                    android:layout_marginLeft="10px"
                    android:paddingLeft="5px"
                    android:background="@drawable/biankuang_shape"
                    android:textColor="@color/text_3"
                    android:textSize="27px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="电话："
                    android:textSize="27px" />

                <EditText
                    android:id="@+id/fenxiao_phone"
                    android:layout_width="310px"
                    android:layout_height="70px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/biankuang_shape"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingLeft="5px"
                    android:textSize="27px"
                    android:textColor="@color/text_3"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:text="合同收货地址："
                android:textSize="27px" />

            <EditText
                android:id="@+id/hetong_address"
                android:layout_width="600px"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:hint="请详细到街道门牌信息"
                android:background="@drawable/biankuang_shape"
                android:paddingLeft="5px"
                android:textColor="@color/text_3"
                android:maxLines="2"
                android:textColorHint="@color/alpha_33"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="#f3f3f3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20px"
                    android:text="收款资料"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="银行卡号："
                    android:textSize="27px" />

                <EditText
                    android:id="@+id/bank_card"
                    android:layout_width="470px"
                    android:layout_height="70px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/biankuang_shape"
                    android:inputType="number"
                    android:textColor="@color/text_3"
                    android:paddingLeft="5px"
                    android:textSize="26px"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="银行归属："
                    android:textSize="27px" />

                <EditText
                    android:id="@+id/bank_type"
                    android:layout_width="470px"
                    android:layout_height="70px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/biankuang_shape"
                    android:textColor="@color/text_3"
                    android:textSize="27px"
                    android:paddingLeft="5px"
                    android:maxLines="2" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/tv_post_information"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:background="@drawable/denglu_selector"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="35px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
