<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_round_white">

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="222px"
        android:layout_height="222px"
        android:layout_centerVertical="true"
        android:layout_marginRight="50px"
        android:focusable="false" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:layout_toRightOf="@id/img_goods"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="东北大米"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <TextView
            android:layout_marginTop="22px"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/img_goods"
            android:ellipsize="end"
            android:lines="2"
            android:paddingBottom="8px"
            android:paddingTop="8px"
            android:text="优质东北大米"
            android:textColor="@color/text_9"
            android:textSize="26px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="22px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:text="￥50.8"
                android:textColor="@color/red2"
                android:textSize="36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_price"
                android:layout_marginLeft="22px"
                android:background="@color/red2"
                android:padding="4px"
                android:text="爆款抢购"
                android:textColor="@color/white"
                android:textSize="18px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginBottom="8px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3px"
                android:text="评论"
                android:textColor="@color/text_9"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22333"
                android:textColor="@color/red"
                android:textSize="22px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3px"
                android:text="条评论"
                android:textColor="@color/text_9"
                android:textSize="22px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>