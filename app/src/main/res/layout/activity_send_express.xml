<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_top" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="15px"
        android:paddingLeft="20px"
        android:paddingTop="15px">

        <ImageView
            android:id="@+id/icon_ji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ilon_ji"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/send_express_address"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_weight="1"
            android:layout_marginLeft="8px"
            android:paddingLeft="5px"
            android:background="@drawable/postpicture_biankuang"
            android:hint="请输入详细街道门牌信息"
            android:textColorHint="@color/alpha_black"
            android:textSize="24px"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="*请输入寄件人地址"
            android:textColor="@color/red"
            android:textSize="22px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10px"
        android:paddingLeft="68px"
        android:paddingTop="5px">

        <EditText
            android:id="@+id/send_express_name"
            android:layout_width="350px"
            android:layout_height="70px"
            android:background="@drawable/postpicture_biankuang"
            android:paddingLeft="5px"
            android:hint="请输入寄件人姓名"
            android:textColorHint="@color/alpha_black"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="15px"
        android:paddingLeft="20px"
        android:paddingTop="15px">

        <ImageView
            android:id="@+id/icon_shou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ilon_shou"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/choose_get_city"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_marginLeft="8px"
            android:text="选择省市"
            android:ems="5"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:background="@drawable/postpicture_biankuang"
            android:drawableRight="@mipmap/lion_xiala"
            android:textColor="@color/text_9"
            android:textSize="24px"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:drawablePadding="3px"/>
        <EditText
            android:id="@+id/get_express_address"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_weight="1"
            android:layout_marginLeft="3px"
            android:background="@drawable/postpicture_biankuang"
            android:paddingLeft="5px"
            android:hint="填写详细地址信息"
            android:textColorHint="@color/alpha_black"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="*请输入收件人地址"
            android:textColor="@color/red"
            android:textSize="22px" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10px"
        android:paddingLeft="68px"
        android:paddingTop="5px">

        <EditText
            android:id="@+id/get_express_name"
            android:layout_width="350px"
            android:layout_height="70px"
            android:background="@drawable/postpicture_biankuang"
            android:paddingLeft="5px"
            android:hint="请输入收件人姓名"
            android:textColorHint="@color/alpha_black"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_express_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ilon_time"
            android:drawablePadding="5px"
            android:gravity="center_vertical"
            android:text="上门时间" />

        <TextView
            android:id="@+id/tv_ex_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:drawableRight="@mipmap/ico_next"
            android:gravity="center_vertical"
            android:text="一小时以内" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_express_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ilon_type"
            android:drawablePadding="5px"
            android:gravity="center_vertical"
            android:text="快递类型" />

        <TextView
            android:id="@+id/tv_ex_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:drawableRight="@mipmap/ico_next"
            android:gravity="center_vertical"
            android:text="顺丰快递" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/submit_send_express"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:layout_marginTop="60px"
        android:background="@drawable/postbtn_dianji"
        android:gravity="center_horizontal"
        android:paddingBottom="25px"
        android:paddingTop="25px"
        android:text="下单"
        android:textColor="@color/white"
        android:textSize="35px" />

</com.zhy.autolayout.AutoLinearLayout>