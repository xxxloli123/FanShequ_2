<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".service_page.questionnaire.QuestionnaireActivity">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentTop="true"
                android:background="@color/blue2">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="5px"
                    android:src="@mipmap/back_white" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="物业评价"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/top_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:padding="10px"
                    android:text="extra"
                    android:textColor="@color/white"
                    android:textSize="36px"
                    android:visibility="gone" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:padding="11dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_integrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_fraction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.6"
                            android:textColor="@color/blue2"
                            android:textSize="33sp" />

                        <TextView
                            android:text="物业评分"
                            android:textColor="@color/text_9"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="1dp"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginRight="3dp"
                                android:text="服务"
                                android:textColor="@color/text_9"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <!--<com.willy.ratingbar.ScaleRatingBar-->
                                <!--android:visibility="gone"-->
                                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                                <!--android:id="@+id/srb_service"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--app:srb_numStars="5"-->
                                <!--app:srb_drawableEmpty="@mipmap/uncheck"-->
                                <!--app:srb_drawableFilled="@mipmap/stars"-->
                                <!--app:srb_minimumStars="0"-->
                                <!--app:srb_rating="4.5"-->
                                <!--app:srb_starWidth="13dp"-->
                                <!--app:srb_starHeight="13dp"-->
                                <!--app:srb_starPadding="3dp"-->
                                <!--app:srb_stepSize="0.5"-->
                                <!--app:srb_isIndicator="false"-->
                                <!--app:srb_clickable="false"-->
                                <!--app:srb_scrollable="false"-->
                                <!--app:srb_clearRatingEnabled="true"/>-->

                            <com.vondear.rxui.view.roundprogressbar.RxTextRoundProgressBar
                                android:id="@+id/rx_pd_service"
                                android:layout_width="99dp"
                                android:layout_height="12dp"
                                app:rcBackgroundColor="@color/gray8_E6E6E6"
                                app:rcMax="5"
                                app:rcRadius="0dp"
                                app:rcProgress="3.6"
                                app:rcProgressColor="@color/blue2" />

                            <TextView
                                android:id="@+id/tv_service"
                                android:layout_marginLeft="12dp"
                                android:text="4.6"
                                android:textColor="@color/text_9"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </com.zhy.autolayout.AutoLinearLayout>
                        <com.zhy.autolayout.AutoLinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginRight="3dp"
                                android:text="消防"
                                android:textColor="@color/text_9"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <!--<com.willy.ratingbar.ScaleRatingBar-->
                                <!--android:visibility="gone"-->
                                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                                <!--android:id="@+id/srb_fire_control"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--app:srb_numStars="5"-->
                                <!--app:srb_drawableEmpty="@mipmap/uncheck"-->
                                <!--app:srb_drawableFilled="@mipmap/stars"-->
                                <!--app:srb_minimumStars="0"-->
                                <!--app:srb_starWidth="13dp"-->
                                <!--app:srb_starHeight="13dp"-->
                                <!--app:srb_starPadding="3dp"-->
                                <!--app:srb_stepSize="0.5"-->
                                <!--app:srb_isIndicator="false"-->
                                <!--app:srb_clickable="false"-->
                                <!--app:srb_scrollable="false"-->
                                <!--app:srb_clearRatingEnabled="true"/>-->

                            <com.vondear.rxui.view.roundprogressbar.RxTextRoundProgressBar
                                android:id="@+id/rx_pd_firefighting"
                                app:rcRadius="0dp"
                                android:layout_width="99dp"
                                android:layout_height="12dp"
                                app:rcBackgroundColor="@color/gray8_E6E6E6"
                                app:rcMax="5"
                                app:rcProgress="3.6"
                                app:rcProgressColor="@color/blue2" />

                            <TextView
                                android:id="@+id/tv_fire_control"
                                android:layout_marginLeft="12dp"
                                android:text="4.6"
                                android:textColor="@color/text_9"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </com.zhy.autolayout.AutoLinearLayout>
                        <com.zhy.autolayout.AutoLinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginRight="3dp"
                                android:text="环境"
                                android:textColor="@color/text_9"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <!--<com.willy.ratingbar.ScaleRatingBar-->
                                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                                <!--android:id="@+id/srb_environment"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--app:srb_numStars="5"-->
                                <!--app:srb_drawableEmpty="@mipmap/uncheck"-->
                                <!--app:srb_drawableFilled="@mipmap/stars"-->
                                <!--app:srb_minimumStars="0"-->
                                <!--app:srb_rating="4.5"-->
                                <!--app:srb_starWidth="13dp"-->
                                <!--app:srb_starHeight="13dp"-->
                                <!--app:srb_starPadding="3dp"-->
                                <!--app:srb_stepSize="0.5"-->
                                <!--app:srb_isIndicator="false"-->
                                <!--app:srb_clickable="false"-->
                                <!--app:srb_scrollable="false"-->
                                <!--app:srb_clearRatingEnabled="true"/>-->

                            <com.vondear.rxui.view.roundprogressbar.RxTextRoundProgressBar
                                android:id="@+id/rx_pd_environment"
                                app:rcRadius="0dp"
                                android:layout_width="99dp"
                                android:layout_height="12dp"
                                app:rcBackgroundColor="@color/gray8_E6E6E6"
                                app:rcMax="5"
                                app:rcProgress="3.6"
                                app:rcProgressColor="@color/blue2" />

                            <TextView
                                android:id="@+id/tv_environment"
                                android:layout_marginLeft="12dp"
                                android:text="4.6"
                                android:textColor="@color/text_9"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="1dp"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_satisfaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="66%"
                            android:textColor="@color/blue2"
                            android:textSize="33sp" />

                        <TextView
                            android:text="满意度"
                            android:textColor="@color/text_9"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:id="@+id/img_integrate"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:src="@drawable/myqdwf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:alpha="50"
                android:background="@color/alpha_33"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:padding="11dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:visibility="gone"
                            android:id="@+id/all_questionnaire2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_questionnaire_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </com.zhy.autolayout.AutoRelativeLayout>

                            <TextView
                                android:textSize="33px"
                                android:textColor="@color/text_6"
                                android:layout_marginTop="33px"
                                android:text="请留下你的宝贵意见"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:gravity="top"
                                android:layout_marginTop="24px"
                                android:id="@+id/edt_opinion"
                                android:layout_width="match_parent"
                                android:layout_height="250px"
                                android:background="@drawable/shape_comment_choose_bg2"
                                android:hint="我们会认真阅读您的建议"
                                android:padding="12px"
                                android:textColor="@color/text_6"
                                android:textColorHint="@color/text_9"
                                android:textSize="28px" />

                            <com.fanhong.cn.view.StateButton
                                android:onClick="submit"
                                android:layout_margin="11dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="提交"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:radius2="12dp"
                                app:normalBackgroundColor="@color/blue3"
                                app:pressedBackgroundColor="@color/dark_blue3"
                                app:unableBackgroundColor="@color/dark_blue3" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="全部评价"
                                android:textColor="@color/text_6"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_list_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                </ScrollView>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:visibility="gone"
            android:id="@+id/all_reply"
            android:orientation="vertical"
            android:background="@color/alpha_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:onClick="openCloseReply"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:paddingLeft="8dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:hint="请输入评论文字"
                    android:textColor="@color/text_6"
                    android:id="@+id/edt_reply"
                    android:theme="@style/MyEditText"
                    android:paddingLeft="8dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.fanhong.cn.view.StateButton
                    android:gravity="center"
                    android:layout_margin="6dp"
                    android:onClick="submitReply"
                    android:layout_gravity="center_vertical"
                    android:padding="1dp"
                    android:layout_width="66dp"
                    android:layout_height="33dp"
                    android:text="评论"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:radius2="3dp"
                    app:normalBackgroundColor="@color/blue3"
                    app:pressedBackgroundColor="@color/dark_blue3"
                    app:unableBackgroundColor="@color/dark_blue3" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>


</com.zhy.autolayout.AutoLinearLayout>