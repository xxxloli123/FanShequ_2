<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10px">

    <include layout="@layout/activity_top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/expressage_banner" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/send_expressage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="40px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:src="@mipmap/send_expressage" />

            <ImageView
                android:id="@+id/check_expressage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="40px"
                android:layout_marginRight="60px"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:src="@mipmap/check_expressage" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expressage_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="40px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:src="@mipmap/expressage_order" />

            <ImageView

                android:id="@+id/net_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="40px"
                android:layout_marginRight="60px"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:src="@mipmap/net_phone" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e5e5e5"/>

    <include layout="@layout/agree_sheets" />
</com.zhy.autolayout.AutoLinearLayout>