<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    tools:context="com.fanhong.cn.HomeActivity">

    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:onClick="onClicks"
            android:id="@+id/all_tab_home"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="99px">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/img_tab_home"
                android:layout_weight="1"
                android:src="@mipmap/home_page_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_tab_home"
                android:layout_marginTop="6px"
                android:textColor="@color/text_9"
                android:text="首页"
                android:textSize="18px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:onClick="onClicks"
            android:id="@+id/all_tab_door"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="99px">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/img_tab_door"
                android:layout_weight="1"
                android:src="@drawable/tab_rbtn_door_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_tab_door"
                android:layout_marginTop="6px"
                android:textColor="@color/text_9"
                android:text="门禁"
                android:textSize="18px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:onClick="onClicks"
            android:id="@+id/all_tab_my"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="99px">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/img_tab_my"
                android:layout_weight="1"
                android:src="@drawable/tab_rbtn_my"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_tab_my"
                android:layout_marginTop="6px"
                android:textColor="@color/text_9"
                android:text="我的"
                android:textSize="18px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
