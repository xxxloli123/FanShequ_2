<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_top" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_jdwx"
        android:padding="40px"
        android:paddingBottom="100px">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.72"
            android:background="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="12px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓　　名："
                        android:textColor="@color/text_6"
                        android:textSize="30px" />

                    <EditText
                        android:id="@+id/edt_input_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_comment_choose_bg"
                        android:ems="6"
                        android:padding="10px"
                        android:textColor="@color/text_6"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grayD" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="12px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        android:textColor="@color/text_6"
                        android:textSize="30px" />

                    <EditText
                        android:id="@+id/edt_input_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_comment_choose_bg"
                        android:ems="7"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="10px"
                        android:textColor="@color/text_6"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grayD" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="12px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区名称："
                        android:textColor="@color/text_6"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/tv_cellName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_comment_choose_bg"
                        android:ems="7"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="10px"
                        android:textColor="@color/text_6"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grayD" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="12px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地　　址："
                        android:textColor="@color/text_6"
                        android:textSize="30px" />

                    <EditText
                        android:id="@+id/edt_input_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_comment_choose_bg"
                        android:hint="请输入详细门牌信息"
                        android:padding="10px"
                        android:textColor="@color/text_6"
                        android:textColorHint="@color/text_9"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grayD" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="12px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="12px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描　　述："
                        android:textColor="@color/text_6"
                        android:textSize="30px" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/rb_human_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/text_6"
                            android:checked="true"
                            android:text="人行门"
                            android:textColor="@color/text_6"
                            android:textSize="24px" />

                        <RadioButton
                            android:id="@+id/rb_unit_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/text_6"
                            android:text="单元门"
                            android:textColor="@color/text_6"
                            android:textSize="24px" />

                        <RadioButton
                            android:id="@+id/rb_park_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/text_6"
                            android:text="车库门"
                            android:textColor="@color/text_6"
                            android:textSize="24px" />

                        <RadioButton
                            android:id="@+id/rb_else_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/text_6"
                            android:text="其他"
                            android:textColor="@color/text_6"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <EditText
                        android:id="@+id/edt_input_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_comment_choose_bg"
                        android:gravity="start"
                        android:hint="请描述详细情况"
                        android:lineSpacingExtra="4px"
                        android:lines="4"
                        android:padding="4px"
                        android:textColor="@color/text_6"
                        android:textColorHint="@color/text_9"
                        android:textSize="30px" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:gravity="center_vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/layout_chosen"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8px"
                            android:background="@color/white"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_1"
                                android:layout_width="139px"
                                android:layout_height="139px"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/img_2"
                                android:layout_width="139px"
                                android:layout_height="139px"
                                android:layout_marginLeft="8px"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/img_3"
                                android:layout_width="139px"
                                android:layout_height="139px"
                                android:layout_marginLeft="8px"
                                android:scaleType="centerCrop" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <ImageView
                            android:id="@+id/img_Add"
                            android:layout_width="139px"
                            android:layout_height="139px"
                            android:background="@drawable/selector_comment_choose_bg"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_choose_pic" />

                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="85px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="50px"
                    android:background="@drawable/btn_radius_red"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="35px" />
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>