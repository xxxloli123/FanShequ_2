<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    tools:context="com.fanhong.cn.user_page.EvaluateActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_top" />

        <TextView
            android:id="@+id/tv_eva_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:layout_marginTop="32px"
            android:text="精品-酱聖酒"
            android:textColor="@color/text_3"
            android:textSize="30px" />

        <EditText
            android:id="@+id/edt_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:layout_marginTop="28px"
            android:background="@drawable/edit_input_cellname"
            android:gravity="start"
            android:hint="@string/evaluateHint"
            android:lines="6"
            android:padding="12px"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:layout_marginTop="28px"
            android:gravity="center_vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_chosen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8px"
                android:background="@color/white"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_eva1"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_eva2"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_marginLeft="8px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_eva3"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_marginLeft="8px"
                    android:scaleType="centerCrop" />
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/img_evaAdd"
                android:layout_width="160px"
                android:layout_height="160px"
                android:background="@drawable/selector_comment_choose_bg"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_choose_pic" />

        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="40px"
            android:background="@drawable/denglu_selector"
            android:onClick="onCommit"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="36px" />
    </com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:background="@color/alpha_black"
    android:gravity="center"
    android:id="@+id/layout_progress"
    android:visibility="gone"
    android:layout_height="match_parent">
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="420px"
    android:background="@color/text_3"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="300px">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34px"
        android:layout_marginTop="12px"
        android:textColor="@color/text_9"
        android:text="正在上传"/>
</com.zhy.autolayout.AutoLinearLayout></com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
