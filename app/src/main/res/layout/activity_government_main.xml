<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_top"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/party_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/text_9"
        android:layout_marginBottom="5px"/>
    <RadioGroup
        android:id="@+id/bottom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginTop="5px"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radiogroup_fx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:text="分享"/>
        <RadioButton
            android:id="@+id/radiogroup_lt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:text="论坛"/>

        <RadioButton
            android:id="@+id/radiogroup_wd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:text="我的"/>
    </RadioGroup>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bottom_fx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/skyblue"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>
        <TextView
            android:id="@+id/bottom_lt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/skyblue"
            android:visibility="invisible"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>
        <!--<TextView-->
        <!--android:id="@+id/bottom_cy"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/white"-->
        <!--android:layout_marginLeft="10px"-->
        <!--android:layout_marginRight="10px"/>-->
        <TextView
            android:id="@+id/bottom_wd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/skyblue"
            android:visibility="invisible"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
