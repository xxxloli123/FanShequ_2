<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goods_picture"
            android:layout_width="200px"
            android:layout_height="200px"
            android:padding="5px"
            android:layout_margin="5px"
            android:src="@mipmap/pictureloading"
            android:scaleType="centerCrop"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10px">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="7"
                    android:paddingLeft="20px"
                    android:text="商品名字"
                    android:textColor="@color/lightblue" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/rmb"
                    android:drawablePadding="4px"
                    android:gravity="center_vertical"
                    android:text="230.00"
                    android:textColor="@color/red" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/goods_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#666"
                android:textSize="25px"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="商品描述" />

            <TextView
                android:id="@+id/owner_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:text="卖家电话"/>
            <TextView
                android:id="@+id/owner_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:text="卖家姓名"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/call_seller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="立即联系"
            android:textSize="12sp"
            android:textColor="#00be8e"
            android:gravity="center_vertical"
            android:layout_marginRight="10px"
            android:layout_marginLeft="6px"
            android:drawableLeft="@mipmap/button_lianxi"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>