<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    tools:context="com.fanhong.cn.user_page.AccountSetsActivity">

    <include layout="@layout/activity_top" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="onHeadImg"
        android:paddingRight="20px">

        <ImageView
            android:layout_width="68px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px"
            android:src="@mipmap/ico_people" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/head"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="10px"
            android:scaleType="centerInside"
            android:src="@mipmap/ico_tx" />

        <ImageView
            android:id="@+id/img_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_margin="10px"
            android:src="@mipmap/ico_qj" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="onNickName"
        android:paddingRight="20px">

        <ImageView
            android:layout_width="68px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px"
            android:src="@mipmap/ico_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nick"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="0dp"
            android:layout_height="86px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:scaleType="centerInside"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_margin="10px"
            android:src="@mipmap/ico_qj" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingRight="20px">

        <ImageView
            android:layout_width="68px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px"
            android:src="@mipmap/ico_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="86px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:scaleType="centerInside"
            android:textColor="@color/text_6"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="onAddress"
        android:paddingRight="20px">

        <ImageView
            android:layout_width="68px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px"
            android:src="@mipmap/ilon_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/address"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_margin="10px"
            android:src="@mipmap/ico_qj" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="onResetPwd"
        android:paddingRight="20px">

        <ImageView
            android:layout_width="68px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px"
            android:src="@mipmap/ico_password1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resetPwd"
            android:textColor="@color/text_6"
            android:textSize="30px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_margin="10px"
            android:src="@mipmap/ico_qj" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
