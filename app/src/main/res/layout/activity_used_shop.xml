<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/skyblue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/used_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:src="@mipmap/back_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/radio_used_shop"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:background="@color/radioback"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6px">

            <RadioButton
                android:id="@+id/radio_used_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rb_bg_selector"
                android:button="@null"
                android:checked="true"
                android:padding="6px"
                android:text="物品买卖"
                android:textColor="@drawable/title_radio_text_selector" />

            <RadioButton
                android:id="@+id/radio_used_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10px"
                android:background="@drawable/rb_bg_selector"
                android:button="@null"
                android:padding="6px"
                android:text="物品发布"
                android:textColor="@drawable/title_radio_text_selector" />
        </RadioGroup>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/used_select_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5px"
            android:padding="6px"
            android:src="@mipmap/login_user"
            android:visibility="invisible"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/used_body_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.zhy.autolayout.AutoLinearLayout>
