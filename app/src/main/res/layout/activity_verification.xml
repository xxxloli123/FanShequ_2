<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/activity_top"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="5px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="5px">
        <ImageView
            android:id="@+id/choose_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ilon_dizhi"
            android:tint="@color/skyblue"
            android:padding="23px" />

        <EditText
            android:id="@+id/default_location"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="这里显示定位位置"
            android:lines="1"
            android:singleLine="true"
            android:textSize="28px"
            android:background="@color/transParent"
            android:layout_marginLeft="20px"
            android:textColor="@color/text_6"
            android:gravity="center_vertical"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e5e5e5"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10px"
        android:layout_marginRight="5px"
        android:paddingLeft="10px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xingming"
            android:text="姓名"
            android:gravity="center_vertical"
            android:textColor="@color/text_3"
            android:drawablePadding="20px"
            android:padding="20px" />

        <EditText
            android:id="@+id/car_hostname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@color/transParent"
            android:textColor="@color/text_6" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e5e5e5"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10px"
        android:layout_marginRight="5px"
        android:paddingLeft="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ilon_shouji"
            android:textColor="@color/text_3"
            android:text="电话"
            android:drawablePadding="30px"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            android:paddingRight="20px"/>
        <EditText
            android:id="@+id/car_hostphone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@color/transParent"
            android:textColor="@color/text_6" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e5e5e5"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="30px">

        <EditText
            android:id="@+id/input_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:textSize="23px"
            android:textColorHint="@color/text_9"
            android:hint="输入手机验证码"
            android:textColor="@color/text_6"
            android:background="@drawable/postpicture_biankuang" />
        <TextView
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="30px"
            android:paddingTop="15px"
            android:paddingBottom="15px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:text="@string/getcode"
            android:gravity="center"
            android:textSize="30px"
            android:textColor="@color/white"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:background="@drawable/btncolor_selector"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/agree_sheets"/>
    <com.amap.api.maps2d.MapView
        android:id="@+id/gaode_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10px"/>
    <Button
        android:id="@+id/submit_caryuyue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立 即 预 约"
        android:textColor="@color/white"
        android:textSize="35px"
        android:background="@color/lightred"/>
</com.zhy.autolayout.AutoLinearLayout>