    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/bn_banner"
            android:layout_width="match_parent"
            android:layout_height="388px"
            android:background="@mipmap/sc_banner"
            app:banner_default_image="@mipmap/banner"
            app:indicator_drawable_selected="@color/blue2"
            app:indicator_drawable_unselected="@color/white"
            app:indicator_height="12px"
            app:indicator_margin="6px"
            app:indicator_width="12px"
            app:title_height="77px"
            app:title_textsize="33px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_fillStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:onClick="onClicks"
                    android:padding="5px"
                    android:src="@mipmap/back_white" />

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/btn_gwc"
                    android:gravity="center_vertical"
                    android:onClick="onClicks" />

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>


