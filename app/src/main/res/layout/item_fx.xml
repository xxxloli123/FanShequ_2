<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5px"
    android:id="@+id/fx_layout">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="■■■■"
        android:textColor="@color/text_3"
        android:textSize="35px"
        android:layout_marginLeft="20px" />
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="■■■■■■■■■■■■■■■■"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_margin="20px"/>
    <ImageView
        android:id="@+id/author_photo"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_below="@id/content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="20px"
        android:src="@mipmap/default_photo"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/author_photo"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@id/author_photo"
        android:text="■■■■"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000-01-01"
        android:layout_alignBottom="@id/author"
        android:layout_toRightOf="@id/author"
        android:layout_marginLeft="15px"/>

    <!--<TextView-->
        <!--android:id="@+id/comment"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="80px"-->
        <!--android:drawableLeft="@drawable/ilon_xx"-->
        <!--android:drawablePadding="5px"-->
        <!--android:text="评论" />-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dedede"
        android:layout_below="@id/time"
        android:layout_marginTop="3px" />
</com.zhy.autolayout.AutoRelativeLayout>